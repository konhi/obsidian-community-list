{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "resolveJsonModule": true,
    "types": ["bun"],
    "lib": ["ES2022"],
    "noUncheckedIndexedAccess": true
  },
  "exclude": ["src/**/*.test.ts"]
}
